            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tipo\": \"DEPOSITO\",\n  \"valor\": \"500.0000\",\n  \"descripcion\": \"Depósito inicial\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/movimientos/100001",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "movimientos", "100001"]
            },
            "description": "Realiza un nuevo movimiento en una cuenta. El valor debe ser positivo tanto para depósitos como retiros."
          },
          "response": [
            {
              "name": "Respuesta Exitosa",
              "originalRequest": {
                "method": "POST",
